        <li><img src="https://img.icons8.com/color/48/null/instagram-reel.png" />Reels</li>

</ul>
<style>
.right {
  position: absolute;
  left: 100%;
  top: -2%;
  margin-top: 10px;
}


.card-nfriend {
  width: 600px;
  display: flex;
  align-items: center;
  margin-left: 50px;
  padding: 10px;
  margin: 5px;
  border: 3px solid black;
  border-radius: 10px;
  background-color: #f8f8f8;
}

.card-nfriend img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.friend-info {
  flex: 1;
}

.card-nfriend h1 {
  font-size: 16px;
  margin: 0;
  padding: 0;
}

.card-nfriend div {
  margin-top: 5px;
}

.card-nfriend button {
  padding: 5px 10px;
  margin-right: 5px;
  font-size: 12px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.card-nfriend button.delete {
  background-color: #d9534f;
  color: white;
}

</style>
<div class="right">
    {{#each friendRq}}
  <div class="card-nfriend">
      <img class="avatar-author" src="data:image/jpeg;base64,{{userId2.avatar}}" alt="">
      <div class="friend-info">
        <h1>{{userId2.username}}</h1>
        <div>
          <button class="delete" data-user-id="{{userId2._id}}">Delete</button>
        </div>
      </div>
      </div>
    {{/each}}
    {{#each friendRq1}}
    <div class="card-nfriend">
      <img class="avatar-author" src="data:image/jpeg;base64,{{userId1.avatar}}" alt="">
      <div class="friend-info">
        <h1>{{userId1.username}}</h1>
        <div>
          <button class="delete" data-user-id="{{userId1._id}}">Delete</button>
        </div>
      </div>
  </div>
{{/each}}

  </div>

</div>
    {{/if}}
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const acceptButtons = document.querySelectorAll(".accept");
      const deleteButtons = document.querySelectorAll(".delete");

      acceptButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const userId2 = button.getAttribute("data-user-id");
          sendActionToServer(userId2, "accept");
        });
      });

      deleteButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const userId2 = button.getAttribute("data-user-id");
          sendActionToServer(userId2, "delete");
        });
      });
    });

    function sendActionToServer(userId2, action) {
      fetch(`/processFriendRequest?userId2=${userId2}&action=${action}`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then((response) => response.json())
        .then((data) => {
          // Xử lý dữ liệu trả về từ server nếu cần
          console.log(data);
        })
        .catch((error) => {
          console.error(error);
        });
    }
  </script>

